{
  "compileOnSave": true,
  "compilerOptions": {
    "noEmitOnError": true,
    "allowJs":  true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es2017",
    "lib": [ "DOM", "ES2021" ],
    "outDir": "js_generated",
    "skipLibCheck": true,
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "noImplicitUseStrict": true
  },
  "include": [ "**/*" ],
  "exclude": [ "js_generated/*", "js_readable/*" ]
}
